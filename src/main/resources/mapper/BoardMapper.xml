<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatispractice.mapper.BoardMapper">

    <select id="boardCount" resultType="int">
        SELECT count(*) FROM BOARD;
    </select>


<!--    // 단일 조회-->
    <select id="findById" resultType="com.example.mybatispractice.domain.Board" parameterType="Long">
        SELECT * FROM BOARD WHERE id = #{id};
    </select>
<!--    // 목록 조회-->
    <select id="findAll" resultType="com.example.mybatispractice.domain.Board">
        SELECT * FROM BOARD;
    </select>
<!--    // 생성-->
    <insert id="save" parameterType="com.example.mybatispractice.domain.Board"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO BOARD (title, content, name, read)
        VALUES (#{title}, #{content}, #{name}, #{read})
    </insert>
<!--    // 수정-->
    <update id="update" parameterType="com.example.mybatispractice.domain.Board">
        UPDATE BOARD SET
                         title=#{title},
                         content=#{content},
                         name=#{name},
                         read=#{read}
        WHERE id = #{id}


    </update>
<!--    // 단일 삭제-->
    <delete id="delete" parameterType="Long">
        DELETE FROM BOARD where id = #{id}
    </delete>
<!--    void delete(Long id);-->
</mapper>